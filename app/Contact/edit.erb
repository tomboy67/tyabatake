<div data-role="page" data-theme="b">

  <div data-role="header" data-position="inline">
    <h1>電話帳編集</h1>
    <a href="<%= url_for :action => :show, :id => @contact["id"] %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      キャンセル
    </a>
    <a href="<%= url_for :action => :delete, :id => @contact["id"] %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      削除
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="contact[id]" value="<%= @contact["id"] %>"/>
      <%= render(:partial => "form") %>
      <%
         case System::get_property('platform')
         when "APPLE"
      %>
        <%= render(:partial => "form_apple") %>
      <% when "ANDROID" %>
        <%= render(:partial => "form_android") %>
      <% end %>
      <input type="submit" value="更新"/>
    </form>
  </div>

</div>
