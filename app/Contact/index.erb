<div data-role="page" data-theme="b">

	<div data-role="header" data-position="inline">
    <h1>電話帳機能</h1>
    <a href="<%= Rho::RhoConfig.start_path %>" class="ui-btn-left" data-icon="home" data-direction="reverse" <%= "data-ajax='false'" if is_bb6 %>>
      機能リストへ
    </a>
	</div>

  <div data-role="content">
    登録件数：<%= @count %>
    <a href="<%= url_for :action => :list %>" data-role="button" >一覧表示</a>
    <a href="<%= url_for :action => :new %>" data-role="button" >新規作成</a>
    <a href="<%= url_for :action => :init %>" data-role="button" >テストデータの投入</a>
    <a href="<%= url_for :action => :paginate %>" data-role="button" >ページネート一覧</a>
    <% if System::get_property("platform") == "ANDROID" %>
      <a href="<%= url_for :action => :search %>" data-role="button" >絞り込み</a>
    <% end %>
  </div>
</div>
