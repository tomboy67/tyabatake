<div data-role="page" data-theme="b">

  <div data-role="header" data-position="inline">
    <h1>電話帳追加</h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      キャンセル
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <%= render(:partial => "form") %>
    <%
       case System::get_property('platform')
       when "APPLE"
    %>
      <%= render(:partial => "form_apple") %>
    <% when "ANDROID" %>
      <%= render(:partial => "form_android") %>
    <% end %>
      
      <input type="submit" value="作成"/>
    </form>
  </div>

</div>
