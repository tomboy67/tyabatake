<div data-role="page" data-theme="b">

  <div data-role="header" data-position="inline">
    <h1>テキスト書き込み</h1>
    <a href="<%= url_for :action => :write %>" class="ui-btn-left" data-icon="back" data-direction="reverse" >
      書き込みメニューへ
    </a>
  </div>

  <div data-role="content">
    <form method="GET" action="<%= url_for :action => :writing %>">
      <input type="hidden" name="tnf" value="1">
      <input type="hidden" name="rtd" value="84">
      <input type="hidden" name="type" value="">
      <div data-role="fieldcontain">
        <label for="text">テキスト:</label>
        <textarea name="text" id="text"></textarea>
      </div>
      <input type="submit" value="実行" data-icon="arrow-r" data-iconpos="right" />
    </form>
  </div>

</div>
