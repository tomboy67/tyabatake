<div data-role="page" data-url="<%= Rho::RhoConfig.start_path %>/" data-theme="b">

  <div data-role="header" data-position="inline">
    <h1>Rhodes機能一覧</h1>
    <% if SyncEngine::logged_in > 0 %>
    <a href="<%= url_for :controller => :Settings, :action => :do_sync %>" class="ui-btn-left" data-icon="refresh">
      Sync
    </a>
    <% end %>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      <li><a href="<%= url_for :controller => :Image, :action => :index %>">カメラ撮影機能</a></li>
      <li><a href="<%= url_for :controller => :GeoLocation, :action => :index %>">GPS機能</a></li>
      <li><a href="<%= url_for :controller => :Barcode, :action => :index %>">バーコードスキャン機能</a></li>
      <li><a href="<%= url_for :controller => :Alert, :action => :index %>">アラート機能</a></li>
      <li><a href="<%= url_for :controller => :Toolbar, :action => :index %>">ツールバー機能</a></li>
      <li><a href="<%= url_for :controller => :Tabbar, :action => :index %>">タブバー機能</a></li>
      <li><a href="<%= url_for :controller => :Navbar, :action => :index %>">ナビゲーションバー機能</a></li>
      <li><a href="<%= url_for :controller => :Webview, :action => :index %>">Web機能</a></li>
      <% if System::get_property('platform') == 'ANDROID' %>
        <li><a href="<%= url_for :controller => :Nfc, :action => :index %>">Nfc機能</a></li>
      <% end %>
      <li><a href="<%= url_for :controller => :Bluetooth, :action => :index %>">Bluetooth機能</a></li>
      <li><a href="<%= url_for :controller => :Contact, :action => :index %>">電話帳機能</a></li>
      <li><a href="<%= url_for :controller => :Event, :action => :index %>">イベント機能</a></li>
      <li><a href="<%= url_for :controller => :Signature, :action => :index %>">署名(サイン機能)</a></li>
      <% if System::get_property('platform') != 'APPLE' %>
        <li><a href="<%= url_for :controller => :Ringtones, :action => :index %>">着信音機能</a></li>
      <% end %>
    </ul>
  </div>
</div>
